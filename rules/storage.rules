rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profile_pictures/{userId} {
      allow read: if true;  // Anyone can view profile pictures
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /videos/{videoId} {
      allow read: if true;  // Anyone can view videos
      allow write: if request.auth != null;  // Any authenticated user can upload videos
    }
    match /thumbnails/{thumbnailId} {
      allow read: if true;  // Anyone can view thumbnails
      allow write: if request.auth != null;  // Any authenticated user can upload thumbnails
    }
  }
}